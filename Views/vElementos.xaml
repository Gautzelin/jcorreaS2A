<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jcorreaS2A.Views.vElementos"
             Title="vElementos">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="SEMANA 2 - ELEMENTOS GUI"
            FontSize="20"
            TextColor="ForestGreen"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Picker x:Name="PkPaises" Title="Paises">
            <Picker.Items>
                <x:String>Ecuador</x:String>
                <x:String>Per√∫</x:String>
                <x:String>Colombia</x:String>
                <x:String>Venezuela</x:String>
            </Picker.Items>
        </Picker>
        
        <Button x:Name="btnPaises" 
                Text="Ver Pais"
                Clicked="btnPaises_Clicked"
                BackgroundColor="ForestGreen"/>

        <DatePicker x:Name="fecha" Format="mm/dd/yyyy" BackgroundColor="LawnGreen"/>

        <Button x:Name="btnFecha" 
                Text="Ver Fecha"
                Clicked="btnFecha_Clicked"
                BackgroundColor="ForestGreen"/>

    </VerticalStackLayout>
</ContentPage>